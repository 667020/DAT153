<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Black Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Black border color -->
            <corners android:radius="8dp"/> <!-- Matches cardCornerRadius -->
        </shape>
    </item>

    <!-- Card Background (Inner part) -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF7F50"/> <!-- Your CardView background color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>
